        <Button Content="▲" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="20" Click="Button_up"/>
        <Button Content="▼" HorizontalAlignment="Left" Margin="35,41,0,0" VerticalAlignment="Top" Width="20" Click="Button_down"/>
